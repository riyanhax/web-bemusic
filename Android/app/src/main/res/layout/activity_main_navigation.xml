<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">

    <include
        layout="@layout/app_bar_main_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:background="@color/color_menu"
        android:fitsSystemWindows="true"
        android:layout_gravity="end"
        app:itemTextColor="@color/textColor"
        app:itemIconTint="@color/textColor"
        app:itemTextAppearance="@style/TextAppearance.FontPath"
        app:headerLayout="@layout/nav_header_main_navigation"
        app:menu="@menu/activity_main_navigation_drawer" >
        <include layout="@layout/layout_profile"></include>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
